<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ChatFragment">

    <fragment
        android:id="@+id/ChatFragment"
        android:name="com.example.assistantai.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat">
        <action
            android:id="@+id/action_ChatFragment_to_SettingsFragment"
            app:destination="@id/SettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/VoiceFragment"
        android:name="com.example.assistantai.VoiceFragment"
        android:label="Voice"
        tools:layout="@layout/fragment_voice" />

    <fragment
        android:id="@+id/SettingsFragment"
        android:name="com.example.assistantai.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_SettingsFragment_to_ChatFragment"
            app:destination="@id/ChatFragment" />
    </fragment>

</navigation>